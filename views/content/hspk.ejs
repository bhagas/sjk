        //      { "width": "20%" },
        //      { "width": "20%" },
    
        //      { "width": "20%" }
        //   ],
         "fnRowCallback": function( row, data, iDisplayIndex ) {
                   var index = iDisplayIndex +1;
                   $('td:eq(0)',row).html(index);
                   return row;
         },
    //   "columnDefs": [
    //       { "width": "100px", "targets": 14}
    //   ],
    });


   

    $('.datane').on('click', '.hspk', function(e) {
          // console.log($(this).attr('id_standar_harga'));
          if($(this).length>1){
            $(this).popover('hide');
          }
          $.getJSON( "/manajemen_master/pekerjaan/detail_satuan/"+$(this).attr('idnya')+"/"+$('#id_kab').val(), function( data ) {
            console.log(data)
            $('.hspk').popover({
                        "html": true,
                        trigger: 'manual',
                        placement: 'left',
                        "content": function () {
                          let text ="<ul>";
                  data.data.list.forEach(function(item){
                    text+=`<li>${item.nama} : Harga = ${item.harga} , Koefisien = ${item.koefisien}</li>`
                  })
                  text+="</ul>"
                  text+="sub total :"+data.data.total;
                  text+="</br>profit :"+data.data.profit;
                  text+="</br>total :"+data.data.total_keseluruhan;
                 return text;
                        }
                    })

            $(e.target).popover('toggle');
          })

         
      })
  




    $('#id_kab').change(function(){
   
   t.ajax.url( `/manajemen_master/pekerjaan/list/${$('#id_kab').val()}` ).load();
 })
