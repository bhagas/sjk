      "processing": true,
           "ajax": "/manajemen_master/pekerjaan/list/"+$('#id_kab').val(),
           "columns": [
               { "data": null},
               { "data": "mata_pembayaran"},
               { "data": "satuan"},
          
               { "data": null, render: function(data){

                  return `<a href="#" class="hspk" idnya="${data.id}">${data.nama_pekerjaan}</a>`;
               }},
            //    { "data": "total_keseluruhan"},
              
         ],
        
         "deferRender": true,
