<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/images/template/shortcut_icon.ico">
    <title></title>

    <link href="/stylesheets/template/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/template/css/style.css" rel="stylesheet">
    <link href="/stylesheets/template/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- Plugin This Page --> 
    <link href="/plugins/slick/slick.css" rel="stylesheet">
    <link href="/plugins/slick/slick-theme.css" rel="stylesheet">
    <!-- End Plugins This Page -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">
    .slick-prev:before, .slick-next:before{
        color: #039556;
    }

    .slider-nav .slick-slide {
        margin: 15px
    }

    .slider-nav .slick-slide img {
        width: 100%;
        height: 100px;
    }
    </style>
</head>

<body>
    
    <% include ../template/header.ejs %>


    <section style="padding: 90px 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <h2 class="m-t-0 m-b-0 text-center"><strong><%= data[0].judul%></strong></h2>
                </div>
            </div>

            <div class="row" style="margin-top: 30px;">
                <div class="col-md-5 col-lg-5">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="slider slider-for">
                                <%if(data[0].file1!=""){%>              
                                    <div>
                                        <img src="/foto/<%= data[0].file1%>" style="width: 100%;height: 460px" />
                                    </div>
                                <%}%>
                                <%if(data[0].file2!=""){%>              
                                    <div>
                                        <img src="/foto/<%= data[0].file2%>" style="width: 100%;height: 460px" />
                                    </div>
                                <%}%>

                                <%if(data[0].file3!=""){%>              
                                    <div>
                                        <img src="/foto/<%= data[0].file3%>" style="width: 100%;height: 460px" />
                                    </div>
                                <%}%>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-top: 15px;">
                        <div class="slider slider-nav">
                                
                            <%if(data[0].file1!=""){%>   
                            <div>
                                <img src="/foto/<%= data[0].file1%>" class="img-responsive" style="height: 100px;width: 100px;">
                            </div>
                            <%}%>

                            <%if(data[0].file2!=""){%>   
                            <div>
                                <img src="/foto/<%= data[0].file2%>" class="img-responsive" style="height: 100px;width: 100px;">
                            </div>
                            <%}%>

                            <%if(data[0].file3!=""){%>   
                            <div>
                                <img src="/foto/<%= data[0].file3%>" class="img-responsive" style="height: 100px;width: 100px;">
                            </div>
                            <%}%>
                        </div>
                    </div>
                </div>

                <div class="col-md-7 col-lg-7">
                    <%- data[0].deskripsi%>
                </div>
            </div>
        </div>
    </section>

    <% include ../template/footer.ejs %>


    <script src="/javascripts/template/jquery.min.js"></script>
    <script src="/javascripts/template/bootstrap.bundle.min.js"></script>
    <!-- Plugins This Page -->
    <script src="/plugins/slick/slick.min.js"></script> 
    <!-- End Plugins This Page -->
    <script type="text/javascript">
      $('.slider-for').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: false,
        fade: true,
        asNavFor: '.slider-nav'
        });
        $('.slider-nav').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        asNavFor: '.slider-for',
        dots: false,
        centerMode: true,
        focusOnSelect: true
        });
    </script>
</body>
</html>